{
  // This is an alias to @tsconfig/node16: https://github.com/tsconfig/bases
  "extends": "@tsconfig/node16/tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "experimentalDecorators": true
  },
  "include": [
    "./**/*",
  ],
}