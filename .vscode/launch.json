    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch program",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/core/index.ts",
            "restart": true,
            "runtimeArgs": [
                "--exec",
                "ts-node",
                "-r",
                "tsconfig-paths/register"
            ],
            "console": "integratedTerminal"
        }
    ]
}